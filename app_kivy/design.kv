#: import SwapTransition kivy.uix.screenmanager.SwapTransition

<Ui>:
    transition: SwapTransition()
    MDScreen:
        name: 'principal'
        md_bg_color: 1,1,1,1
        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(12)
            padding: dp(12)

            MBBoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.3
                Image:
                    source: 'logo.png'
                    pos_hint: {'center_x': 0.5}
                MDLabel:
                    text: 'Iniciar Sessi√≥'
                    halign: 'center'
                    color: '#1D1D1B'
                    font_size: dp(28)
                    bold: True
                    pos_hint: {'center_x': 0.5}

            MBBoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.3
                spacing: dp(12)
                MDTextField:
                    id: user
                    hint_text: "Nom d'usuari"
                    icon_right: 'account'
                    font_size: dp(18)
                    icon_right_color: '#1D1D1B'
                    pos_hint: {'center_x':0.5}
                MDTextField:
                    id: password
                    password: True
                    icon_right: 'key-variant'
                    icon_right_color: '#1D1D1B'
                    hint_text: 'Contrasenya'
                    font_size: dp(18)
                    pos_hint: {'center_x':0.5}

                MDLabel:
                    id: signal_login
                    text: ''
                    halign: 'center'
                    color: '#1D1D1B'
                    font_size: dp(16)
